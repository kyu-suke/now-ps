{
  "version": 2,
  "name": "now-ps",
  "builds": [
    { "src": "*.html", "use": "@now/static" },
    {
      "src": "*.js",
      "use": "@now/node"
    }
  ],
  "routes": [
    {
      "src": "index.html",
      "dest": "index.html"
    },
    {
      "src": "(.*)",
      "methods": ["GET"],
      "dest": "get.js"
    },
    {
      "src": "(.*)",
      "methods": ["POST"],
      "dest": "post.js"
    }
  ]
}
